<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F6A63"
    android:orientation="vertical"
    tools:context="com.example.anna.teacherburnouttest.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Please, take a moment to reflect on why you became a teacher."
        android:textColor="	#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@id/purpose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Why I wanted to be a teacher"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/teacher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="Please, enter your name"
                android:textColor="	#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/yourname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:hint="Name"
                android:inputType="textMultiLine" />

            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:onClick="goToScreen3"
                android:text="Next"
                tools:ignore="OnClick" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
