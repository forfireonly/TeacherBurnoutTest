<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F6A63"
    android:orientation="vertical"
    tools:context="com.example.anna.teacherburnouttest.MainActivity">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/teacher_burnout" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:text="Do you think that you are experiencing \nTeacher Burnout?"
        android:textColor="	#000000"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:paddingBottom="40dp"
        android:paddingLeft="140dp"
        android:text="Take the test to find out"
        android:textColor="	#000000"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:onClick="goToScreen2"/>

</RelativeLayout>
